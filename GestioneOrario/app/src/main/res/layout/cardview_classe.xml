<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:id="@+id/classecard"

            android:background="@android:color/holo_red_light"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:textAlignment="center"
            android:text="3AMM" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profcard"
            android:layout_toRightOf="@+id/classecard"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:text="MERLINI FRANCESCA"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/materiacard"
            android:layout_below="@+id/profcard"
            android:text="ELETTROT. ED ELE."
            android:layout_toRightOf="@+id/classecard"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ora_inizio"
            android:layout_toRightOf="@+id/classecard"
            android:layout_below="@+id/materiacard"
            android:text="00:00"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ora_fine"
            android:text="00:00"
            android:layout_below="@+id/materiacard"
            android:layout_alignEnd="@+id/profcard" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/aula_card"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/holo_red_light"

            android:text="LAB1"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>