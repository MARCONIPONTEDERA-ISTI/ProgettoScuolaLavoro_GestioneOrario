<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="marconi.isti.gestioneorario.DataUIActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tiporicerca"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/giorno_ricerca"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:id="@+id/radioPiano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/giorno_ricerca"
        android:layout_below="@+id/giorno_ricerca" >

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P2"
        android:id="@+id/radioButtonP1"
        android:layout_below="@+id/giorno_ricerca"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P1"
        android:id="@+id/radioButtonP2"
        android:layout_below="@+id/radioButtonP1"
        android:layout_alignStart="@+id/radioButtonP1" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P0"
        android:id="@+id/radioButtonPT"
        android:layout_below="@+id/radioButtonP2"
        android:layout_alignStart="@+id/radioButtonP2" />
    </RadioGroup>
    <ImageView
        android:layout_width="310dp"
        android:layout_height="250dp"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tiporicerca"/>
       <!-- android:layout_toStartOf="@+id/radioButtonP1" -->

    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageView2"
        android:layout_height= "2dp"
        android:background="@color/colorPrimary" />

    <ToggleButton
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:textOn="1"
        android:textOff="1"
        android:id="@+id/buttonO1"
        android:layout_below="@+id/SplitLine_hor1"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:textOn="2"
        android:textOff="2"
        android:id="@+id/buttonO2"
        android:layout_below="@+id/SplitLine_hor1"
        android:layout_toEndOf="@+id/buttonO1"
        android:singleLine="false" />

    <ToggleButton
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:textOn="3"
        android:textOff="3"
        android:id="@+id/buttonO3"
        android:singleLine="false"
        android:layout_below="@+id/SplitLine_hor1"
        android:layout_toEndOf="@+id/buttonO2" />

    <ToggleButton
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:textOn="4"
        android:textOff="4"
        android:id="@+id/buttonO4"
        android:singleLine="false"
        android:layout_below="@+id/SplitLine_hor1"
        android:layout_toEndOf="@+id/buttonO3" />

    <ToggleButton
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:textOn="5"
        android:textOff="5"
        android:id="@+id/buttonO5"
        android:singleLine="false"
        android:layout_below="@+id/SplitLine_hor1"
        android:layout_toEndOf="@+id/buttonO4" />

    <ToggleButton
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:textOn="6"
        android:textOff="6"
        android:id="@+id/buttonO6"
        android:singleLine="false"
        android:layout_below="@+id/SplitLine_hor1"
        android:layout_toEndOf="@+id/buttonO5" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewOrario"
        android:layout_below="@+id/buttonO1"
        android:layout_marginTop="62dp"
        android:layout_toStartOf="@+id/buttonO5" />


</RelativeLayout>
